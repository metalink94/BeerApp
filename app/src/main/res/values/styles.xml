<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="21">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/colorPrimary</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearanceSmall.Inverse</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#ebebeb</item>
        <item name="colorControlActivated">#c3c3c3</item>
        <item name="colorControlHighlight">#c3c3c3</item>

    </style>

    <style name="TextAppearanceSmall">
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:textColor">#c1c1c1</item>
    </style>

    <style name="TextAppearanceLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3d3d3d</item>
    </style>


    <style name="TextAppearanceMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:textColor">#3d3d3d</item>
        <item name="customFont">Roboto-Light.ttf</item>
    </style>

    <style name="TextAppearanceSmall.Inverse">
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:textColor">#a6c5ff</item>
    </style>


</resources>
